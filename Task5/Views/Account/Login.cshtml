@model Task4.ViewModels.LoginModel
<h2>Enter in system</h2>

@Html.ValidationSummary()
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Enter login</label>
            <input class="form-control" type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group btn btn">
            <input type="submit" value="Sign in" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
<button class="btn btn-outline-dark" onclick='location.href="./Register"'>Sign up</button>
