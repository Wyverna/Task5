@model Task4.ViewModels.RegisterModel
<h2>Sign up</h2>
@Html.ValidationSummary()
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Enter Email</label><br />
            <input class="form-control" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Name">Enter login</label><br />
            <input class="form-control" type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br />
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm password</label><br />
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input class="btn btn-outline-dark" type="submit" value="Sign up" />
        </div>
    </div>
</form>
<button class="btn btn-outline-dark" onclick='location.href="./Login"'>Return</button>